@model PWEBLabTestesOnline.Models.ClientViewModel


    <h1>Client List</h1>

    <table class="table table-table-bordered table-hover">
        <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <th>Opções</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model.Users)
           {
               <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                </td>
            </tr>
           }
        </tbody>
    </table>