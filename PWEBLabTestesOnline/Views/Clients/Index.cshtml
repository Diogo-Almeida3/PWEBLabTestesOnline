@model List<ApplicationUser>

<h1>Client List</h1>
<table class="table table-bordered table-hover" id="dataTable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Activated</th>
            <th>Phone Number</th>
            <th>Options</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var utilizador in Model)
       {
         <tr>
            <td>@utilizador.FirstName</td>
            <td>@utilizador.LastName</td>
            <td>@utilizador.Email</td>
            <td>@utilizador.EmailConfirmed</td>
            <td>@utilizador.PhoneNumber</td>
            <td>
                <a asp-action="Edit" asp-route-id="@utilizador.Id">Edit</a> |
                @if (!utilizador.EmailConfirmed)
                    {
                        <form asp-action="Activate">
                            <input type="hidden" name="IdUser" value="@utilizador.Id"/>
                            <a href="#" onclick=this.closest('form').submit()>Activate</a>
                        </form>
                        
                    }
                    else
                    {
                        <form asp-action="Deactivate">
                            <input type="hidden" name="IdUser" value="@utilizador.Id"/>
                            <a href="#" onclick=this.closest('form').submit()>Deactivate</a>
                        </form>
                    }
            </td>
        </tr>
       }
    </tbody>
</table>
