@model PWEBLabTestesOnline.Models.Vacancies

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="font-weight-bold text-primary text-uppercase mb-1">
            <h1>Edit Vacancies</h1>
        </div>
                                <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="VacanciesId" />
                            <div class="form-group">
                                <label asp-for="LaboratoryId" class="control-label"></label>
                                <select asp-for="LaboratoryId" class="form-control" asp-items="ViewBag.LaboratoryId"></select>
                                <span asp-validation-for="LaboratoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CurrentChecklistId" class="control-label"></label>
                                <select asp-for="CurrentChecklistId" class="form-control" asp-items="ViewBag.CurrentChecklistId"></select>
                                <span asp-validation-for="CurrentChecklistId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TypeAnalysisTestsId" class="control-label"></label>
                                <select asp-for="TypeAnalysisTestsId" class="form-control" asp-items="ViewBag.TypeAnalysisTestsId"></select>
                                <span asp-validation-for="TypeAnalysisTestsId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DailyLimit" class="control-label"></label>
                                <input asp-for="DailyLimit" class="form-control" />
                                <span asp-validation-for="DailyLimit" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Duration" class="control-label"></label>
                                <input asp-for="Duration" class="form-control" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Opening" class="control-label"></label>
                                <input asp-for="Opening" class="form-control" />
                                <span asp-validation-for="Opening" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Enclosure" class="control-label"></label>
                                <input asp-for="Enclosure" class="form-control" />
                                <span asp-validation-for="Enclosure" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
