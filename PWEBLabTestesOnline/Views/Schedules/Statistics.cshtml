@model PWEBLabTestesOnline.Models.StatisticsViewModel

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Statistics</h1>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Total Tests Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Tests
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.all.TotalTests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vials fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Positive Tests Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Positive Tests
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.all.TotalPositiveTests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vials fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Negative Tests Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Negative Tests
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.all.TotalNegativeTests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vials fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Inconclusive Tests Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Inconclusive Tests
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.all.TotalInconclusiveTests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vials fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Row -->
    </div>

    <!-- Content Row -->

    <form asp-action="Statistics" method="post">
        <div class="row">
            <!-- Pie Chart Day -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Tests of @Model.FilterDay.Date.ToShortDateString()</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                 aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Number total of tests:</div>
                                <label class="dropdown-item">@Model.OnDay.TotalTests</label>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-header">New Date:</div>
                                <input name="Date" class="dropdown-item" onchange="submit()" type="date" id="date_chart" />
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="PieChartDay"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                <i class="fas fa-circle text-primary"></i> Positive
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> Negative
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-info"></i> Inconclusive
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart Week -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Tests of Week @Model.FilterWeekDay1.ToShortDateString() - @Model.FilterWeekDay2.ToShortDateString()</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                 aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Number total of tests:</div>
                                <label class="dropdown-item">@Model.OnWeek.TotalTests</label>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-header">New Week:</div>
                                <input class="dropdown-item" name="Week" onchange="submit()" type="Week" id="week_chart_select" />
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="PieChartWeek"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                <i class="fas fa-circle text-primary"></i> Positive
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> Negative
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-info"></i> Inconclusive
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart Month -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary" id="month_text">Tests of month @Model.Month.Month/@Model.Month.Year</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                 aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Number total of tests:</div>
                                <label class="dropdown-item">@Model.OnMonth.TotalTests</label>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-header">New Month:</div>
                                <input class="dropdown-item" onchange="submit()" name="Month" type="month" id="month_chart_select" />
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="PieChartMonth"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                <i class="fas fa-circle text-primary"></i> Positive
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> Negative
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-info"></i> Inconclusive
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Content Row -->
        </div>
    </form>

</div>

@section Scripts {



<!-- Page level plugins -->
<script src="~/theme/vendor/chart.js/Chart.min.js"></script>

<script>
        window.onload = function() {
            // Form Filter for Day
            var date = new Date(@Model.FilterDay.Year,@Model.FilterDay.Month-1,@Model.FilterDay.Day); //TODO: Ver porque é que está a criar a data com o mes mal
            var currentDate = date.toISOString().substring(0,10);
            document.getElementById('date_chart').value = currentDate;

            // Form Filter for Week
            var firstDayOfWeek = new Date(@Model.FilterWeekDay1.Year,@Model.FilterWeekDay1.Month-1,@Model.FilterWeekDay1.Day);
            var oneJan = new Date(firstDayOfWeek.getFullYear(),0,1);
            var numberOfDays = Math.floor((firstDayOfWeek - oneJan) / (24 * 60 * 60 * 1000));
            var weekNum = Math.ceil(( firstDayOfWeek.getDay() + 1 + numberOfDays) / 7);

            var weekControl = document.getElementById("week_chart_select")
            weekControl.value = firstDayOfWeek.getFullYear() + '-W' + pad(weekNum,2);

            // Form Filter for Month
            var monthControl = document.getElementById("month_chart_select")
            monthControl.value = @Model.Month.Year + "-" + pad(@Model.Month.Month,2)
            }

            function pad(num, size) {
                num = num.toString();
                while (num.length < size) num = "0" + num;
                return num;
            }
</script>

    @*============================== Char On Day ==============================*@
<script type="text/javascript">
    // Set new default font family and font color to mimic Bootstrap's default styling
    Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#858796';

    // Pie Chart Example
    var ctx = document.getElementById("PieChartDay");
    var myPieChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ["Positive", "Negative", "Inconclusive"],
        datasets: [{
          data: [@Model.OnDay.TotalPositiveTests, @Model.OnDay.TotalNegativeTests, @Model.OnDay.TotalInconclusiveTests],
          backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
          hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
          hoverBorderColor: "rgba(234, 236, 244, 1)",
        }],
      },
      options: {
        maintainAspectRatio: false,
        tooltips: {
          backgroundColor: "rgb(255,255,255)",
          bodyFontColor: "#858796",
          borderColor: '#dddfeb',
          borderWidth: 1,
          xPadding: 15,
          yPadding: 15,
          displayColors: false,
          caretPadding: 10,
        },
        legend: {
          display: false
        },
        cutoutPercentage: 80,
      },
    });
</script>

