@model int

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="font-weight-bold text-primary text-uppercase mb-1">
                                    <h1>Manage Techinicians</h1>
                                </div>
                                <form asp-action="Techinicians">
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                                    }

                                    <div class="form-group">
                                        <label class="control-label">Email of user</label>
                                        <input name="email" type="email" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <input name="action" type="submit" value="Remove" class="btn btn-danger" />
                                    </div>
                                </form>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model">Back to edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
