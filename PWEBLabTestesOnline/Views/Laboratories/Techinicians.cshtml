@model int
<h4>Manage Techinicians</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Techinicians">
            @if(ViewBag.ErrorMessage != null) {
               <div class="text-danger">@ViewBag.ErrorMessage</div> 
            }
            
            <div class="form-group">
                <label class="control-label">Email of user</label>
                <input name="email" type="email" class="form-control" />
            </div>

            <div class="form-group">
                <input name="action" type="submit" value="Remove" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model">Back to edit</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
