@model IEnumerable<PWEBLabTestesOnline.Models.AnalysisTests>

@{
    ViewData["Title"] = "Index";
}

<h1>Scheduled tests</h1>
<p>
    Preciso listar os testes já realizados por resultado
    Preciso de fazer a pesquisa de testes por nome de utilizador e por data de testagem
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechnicianName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AnalysisTestsId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
