@model PWEBLabTestesOnline.Models.UsersViewModel

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="font-weight-bold text-primary text-uppercase mb-1">
            <h1>Users Details</h1>
        </div>
                                <dl class="row">
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.FirstName)
        </dd>
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.ApplicationUser.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.LastName)
        </dd class = "col-sm-10">
        
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd class = "col-sm-10">
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.ApplicationUser.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)
        </dd class = "col-sm-10">
    </dl>
    <br /><br />
    @if(Model.Laboratories != null && Model.Laboratories.Count > 0)
    {
       <h4>User Laboratories</h4>
        <table class="table">
        <thead>
            <tr>
                <th>
                    Laboratory Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lab in Model.Laboratories) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => lab.LaboratoriesName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lab.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => lab.PhoneNumber)
                        </td>
                    </tr>
             }
        </tbody>
    </table> 
    }
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


